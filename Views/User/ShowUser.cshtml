@model web_API9.Models.Application.User.User

@{
    ViewData["Title"] = "ShowUser";
}

<div class="text-left">

    <div class="row">
        <div class="col-3">
            <h1 class="display-4">User</h1>
        </div>
    </div>

    <form asp-controller="User" asp-action="AddUser" method="get">
        <div class="row">
            <div class="col-3"><label asp-for="FirstName">First name</label></div>
            <div class="col-3"><input type="text" asp-for="FirstName" value="first name"></div>
        </div>
        <div class="row">
            <div class="col-3"><label asp-for="LastName">Last name</label></div>
            <div class="col-3"><input type="text" asp-for="LastName" value="last name"></div>
        </div>
        <div class="row">
            <div class="col-3"><label asp-for="PasswordHash">Password</label></div>
            <div class="col-3"><input type="text" asp-for="PasswordHash" value="password"></div>
        </div>
        <div class="row">
            <div class="col-3"><label asp-for="Email">Email</label></div>
            <div class="col-3"><input type="text" asp-for="Email" value="email"></div>
        </div>
        <div class="row">
            <div class="col-3"><label asp-for="Role">Role</label></div>
            <div class="col-3"><input type="text" asp-for="Role" value="role"></div>
            <div class="col-3"><button type="submit">Add a user</button></div>
        </div>
    </form>

    <form asp-controller="User" asp-action="DelUser" method="get">
        <div class="row">
            <div class="col-3"><label asp-for="UserId">User Id</label></div>
            <div class="col-3"><input type="text" asp-for="UserId" value="id"></div>
            <div class="col-3"><button type="submit">Delete a user</button></div>
        </div>
    </form>


    <form asp-controller="User" asp-action="ShowAllUser" method="get">
        <div class="row">
            <div class="col-3">
            </div>
            <div class="col-3">
            </div>
            <div class="col-3">
                <button type="submit">Show all users</button>
            </div>
        </div>
    </form>

    <div class="row">
        <div class="col-3">
            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Back to home page</a>
        </div>
    </div>

</div>

