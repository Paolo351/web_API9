@model web_API9.Models.Application.User.ShowUserViewModel

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="text-left">
        <h1 class="display-5">Login: </h1>


        <form asp-action="Login" method="get" class="mt-sm-3">
            <div class="form-group row">
                <div class="col-sm-2"><label asp-for="Email" class="col-form-label">Email</label></div>
                <div class="col-sm-6"><input type="text" asp-for="Email" value="janowak@gmail.com" class="col-sm-10"></div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2"><label asp-for="PasswordHash" class="col-form-label">Password</label></div>
                <div class="col-sm-6"><input type="password" asp-for="PasswordHash" value="123" class="col-sm-10"></div>
                <div class="col-sm-4"><button type="submit" class="col-sm-5">Login</button></div>
            </div>
        </form>
    </div>
