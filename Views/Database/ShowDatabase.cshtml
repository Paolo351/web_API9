@model web_API9.Models.Application.Database.ShowDatabaseViewModel
@{
    ViewData["Title"] = "ShowDatabase";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

        <div class="text-left">

            <div class="form-group row">
                <div class="col-sm-2"><h1 class="display-5">Database</h1></div>
            </div>


            <form asp-controller="Database" asp-action="AddDatabase" method="get"  class="mt-sm-3">
                <div class="form-group row">
                    <div class="col-sm-2"><label asp-for="Name">Database name</label></div>
                    <div class="col-sm-6"><input type="text" asp-for="Name" value="name"   class="col-sm-11"></div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2"><label asp-for="Engine">Database engine</label></div>
                    <div class="col-sm-6"><input type="text" asp-for="Engine" value="engine"   class="col-sm-11"></div>
                    <div class="col-sm-4"><button type="submit">Add a database</button></div>
                </div>
            </form>

            <form asp-controller="Database" asp-action="DelDatabase" method="get"  class="mt-sm-3">
                <div class="form-group row">
                    <div class="col-sm-2"><label asp-for="DatabaseId">Database Id</label></div>
                    <div class="col-sm-6"><select asp-for="DatabaseId" asp-items="@Model.SDatabaselist" class="col-sm-11"></select></div>
                    <div class="col-sm-4"><button type="submit">Delete a database</button></div>
                </div>
            </form>


            <form asp-controller="Database" asp-action="ShowAllDatabase" method="get"  class="mt-sm-3">
                <div class="form-group row">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-6"></div>
                    <div class="col-sm-4"><button type="submit">Show all databases</button></div>
                </div>
            </form>

            <div class="form-group row">
                <div class="col-sm-12"><a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Back to home page</a></div>
            </div>

        </div>


