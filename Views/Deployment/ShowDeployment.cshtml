@model web_API9.Models.Application.Deployment.Deployment

@{
    ViewData["Title"] = "ShowDeployment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-left">

    <div class="form-group row">
        <div class="col-sm-2">
            <h1 class="display-4">Deployment</h1>
        </div>
    </div>

    <form asp-controller="Deployment" asp-action="AddDeployment" method="get" class="mt-sm-auto">
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-3 col-form-label">Name</label>
            <div class="col-sm-8">
                <input type="text" asp-for="Name" value="name">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="DeployMode" class="col-sm-3 col-form-label">Deploy mode</label>
            <div class="col-sm-8">
                <input type="text" asp-for="DeployMode" value="deploy mode">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="PlannedTimeOfDeployment" class="col-sm-3 col-form-label">Planned time of deployment</label>
            <div class="col-sm-8">
                <input type="text" asp-for="PlannedTimeOfDeployment" value="2020-06-18">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="TimeOfDeployment" class="col-sm-3 col-form-label">Time of deployment</label>
            <div class="col-sm-8">
                <input type="text" asp-for="TimeOfDeployment " value="2020-06-19">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Details" class="col-sm-3 col-form-label">Details</label>
            <div class="col-sm-8">
                <input type="text" asp-for="Details" value="details">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="HasBeenDeployed" class="col-sm-3 col-form-label">Has been deployed? (true or false)</label>
            <div class="col-sm-8">
                <input type="text" asp-for="HasBeenDeployed" value="true">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="AttachedFeatureDescription" class="col-sm-3 col-form-label">Attached feature description</label>
            <div class="col-sm-8">
                <input type="text" asp-for="AttachedFeatureDescription" value="attached feature description">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="SchemaContent" class="col-sm-3 col-form-label">Schema content</label>
            <div class="col-sm-8">
                <input type="text" asp-for="SchemaContent" value="schema content">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="TargetDbId" class="col-sm-3 col-form-label">Database Id</label>
            <div class="col-sm-8">
                <input type="text" asp-for="TargetDbId" value="5ed636562f2bad0006deba6d">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="SchemaCreatedByUserId" class="col-sm-3 col-form-label">User Id</label>
            <div class="col-sm-8">
                <input type="text" asp-for="SchemaCreatedByUserId" value="5ed77e311e77180006856a7e">
            </div>
        </div>


        <!--<div class="form-group row">



        <label asp-for="AttachedToProjectId" class="col-sm-3 col-form-label">Project Id</label>
        <div class="col-sm-5">
            <select asp-for="AttachedToProjectId" asp-items="web_API9.Controllers.ProjectController.ReturnAListOfProjects()" class="col-sm-5"></select>

        </div>


    </div>-->

        <div class="form-group row">
            <label asp-for="AttachedToProjectId" class="col-sm-3 col-form-label">Project Id</label>
            <div class="col-sm-4">
                <input type="text" asp-for="AttachedToProjectId" value="5ed757481e77180006856a7a">
            </div>

            <div>
                <button type="submit" class="col-sm-12">Add a deployment</button>
            </div>
        </div>
    </form>

    <form asp-controller="Deployment" asp-action="DelDeployment" method="get" class="mt-sm-auto">
        <div class="form-group row">
            <label asp-for="DeploymentId" class="col-sm-3 col-form-label">Deployment Id</label>
            <div class="col-sm-4">
                <input type="text" asp-for="DeploymentId" value="id">
            </div>
            <div>
                <button type="submit" class="col-sm-12">Delete a deployment</button>
            </div>
        </div>
    </form>


    <form asp-controller="Deployment" asp-action="ShowAllDeployment" method="get" class="mt-sm-auto">
        <div class="form-group row">
            <div class="col-sm-3">
            </div>
            <div class="col-sm-4">
            </div>
            <div>

                <button type="submit" class="col-sm-12">Show all Deployments</button>
            </div>
        </div>

    </form>

    <div class="form-group row">

        <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Back to home page</a>

    </div>

</div>
